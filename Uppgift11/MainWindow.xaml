<Window x:Class="Uppgift11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uppgift11"
        mc:Ignorable="d"
        Title="Gissa talet" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="guessBox" HorizontalAlignment="Left" Margin="267,200,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="gissning" Content="Gissning" HorizontalAlignment="Left" Margin="267,174,0,0" VerticalAlignment="Top"/>
        <Button x:Name="guessBtn" Content="Gissa" HorizontalAlignment="Left" Margin="292,232,0,0" VerticalAlignment="Top" Width="70" Click="guessBtn_Click" IsEnabled="False"/>
        <Button x:Name="slumpBtn" Content="Slumpa tal" HorizontalAlignment="Left" Margin="411,200,0,0" VerticalAlignment="Top" Width="73" Click="slumpBtn_Click"/>
        <TextBlock x:Name="svarBlock" HorizontalAlignment="Left" Margin="244,290,0,0" TextWrapping="Wrap" Text="Tryck på slumpa tal  för att börja gissningspelet!" VerticalAlignment="Top"/>

    </Grid>
</Window>
